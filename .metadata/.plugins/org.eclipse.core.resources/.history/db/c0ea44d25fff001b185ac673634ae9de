package controller;

import java.io.IOException;
import javax.servlet.ServletException;
import javax.servlet.annotation.WebServlet;
import javax.servlet.http.HttpServlet;
import javax.servlet.http.HttpServletRequest;
import javax.servlet.http.HttpServletResponse;
import model.DAO;
import model.JavaBeans;

/**
 * Servlet implementation class Controller
 */
@WebServlet(urlPatterns = { "/Controller", "/main", "/insert" })
public class Controller extends HttpServlet {
	private static final long serialVersionUID = 1L;
	DAO dao = new DAO();
	JavaBeans referral = new JavaBeans();

	public Controller() {
		super();

	}

	protected void doGet(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		String action = request.getServletPath();
		System.out.println("This is the action: " + action);
		// If we receive the "main", we redirect to this method
		if (action.equals("/main")) {
			referrals(request, response);
		}else if(action.equals("/insert")) {
			newReferral(request, response);
		}else {
			response.sendRedirect("index.html");
		}
	}

	// List of referrals
	protected void referrals(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		response.sendRedirect("agenda.jsp");
	}
	
	// New referral
	protected void newReferral(HttpServletRequest request, HttpServletResponse response)
			throws ServletException, IOException {
		
		System.out.println(request.getParameter("txt_firstname"));
	
		// Set the variables JavaBeans
		try {
		referral.setFirstname("txt_firstname");
		referral.setLastname("txt_lastname");
		referral.setWrole("txt_role");
		referral.setWphone("txt_phone");
		referral.setWemail("txt_email");
		referral.setWrefnumber("txt_refnumber");
		referral.setWhear("txt_hear");
		referral.setWdatebirth("txt_dbirth");
		referral.setWtodo("txt_todo");
		referral.setWpdiagnosis("txt_pdiagnosis");
		referral.setWsdiagnosis("txt_sdiagnosis");
		referral.setWeekhours("float_hours");
		referral.setWreasonref("txt_reasonref");
		referral.setWfunding("txt_fundingbody");
		referral.setWdraty("txt_draty");
		referral.setWplocation("txt_preflocation");
		referral.setWacomneeds("txt_acomneeds");
		referral.setWdatestart("txt_dstart");
		
		// Ivoque method "insertReferral" using the object referral as a parameter
		dao.insertReferral(referral);
		}catch (Exception e) {
			System.out.println(e);
		}
		
		// Redirect to the document agenda.jsp to list our contacts
		response.sendRedirect("main");
	}
}
